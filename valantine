  <script>
    // --- Page 1 logic (No button text changes) ---
    const noPhrases = [
      "No üôà",
      "Are you sure? üò≥",
      "Please baby ü•∫",
      "Come onnn üò≠",
      "Don‚Äôt break my heart üíî",
      "Last chance üò§",
      "Okay‚Ä¶ pretty please üíñ",
      "Say yes üòò"
    ];
    let noIndex = 0;

    const page1 = document.getElementById("page1");
    const page2 = document.getElementById("page2");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");

    noBtn.addEventListener("click", () => {
      noIndex = Math.min(noIndex + 1, noPhrases.length - 1);
      noBtn.textContent = noPhrases[noIndex];

      // Optional: make "Yes" slightly bigger each time üòà
      const scale = 1 + (noIndex * 0.06);
      yesBtn.style.transform = `scale(${scale})`;
    });

    yesBtn.addEventListener("click", () => {
      page1.classList.add("hidden");
      page2.classList.remove("hidden");
      window.scrollTo({ top: 0, behavior: "smooth" });
    });

    // --- Page 2: YouTube embed + saving into URL ---
    const ytInput = document.getElementById("yt");
    const applySongBtn = document.getElementById("applySong");
    const player = document.getElementById("player");
    const msg = document.getElementById("msg");
    const backBtn = document.getElementById("backBtn");
    const lockBtn = document.getElementById("lockBtn");
    const lockHint = document.getElementById("lockHint");

    function extractYouTubeId(url){
      if(!url) return "";
      try{
        const u = new URL(url.trim());
        // youtu.be/VIDEOID
        if(u.hostname.includes("youtu.be")){
          return u.pathname.replace("/", "");
        }
        // youtube.com/watch?v=VIDEOID
        const v = u.searchParams.get("v");
        if(v) return v;
        // youtube.com/shorts/VIDEOID
        const parts = u.pathname.split("/");
        const shortsIndex = parts.indexOf("shorts");
        if(shortsIndex !== -1 && parts[shortsIndex+1]) return parts[shortsIndex+1];
      }catch(e){
        // not a valid URL
      }
      return "";
    }

    function setEmbedFromLink(){
      const id = extractYouTubeId(ytInput.value);
      if(!id){
        player.classList.add("hidden");
        player.src = "";
        return;
      }
      player.src = `https://www.youtube.com/embed/${id}`;
      player.classList.remove("hidden");
    }

    applySongBtn.addEventListener("click", setEmbedFromLink);

    backBtn.addEventListener("click", () => {
      page2.classList.add("hidden");
      page1.classList.remove("hidden");
      window.scrollTo({ top: 0, behavior: "smooth" });
    });

    // Save message + youtube link into URL so you can send ONE link
    lockBtn.addEventListener("click", () => {
      const params = new URLSearchParams(window.location.search);
      params.set("m", encodeURIComponent(msg.value));
      params.set("yt", encodeURIComponent(ytInput.value.trim()));
      params.set("ready", "1");

      const newUrl = `${window.location.pathname}?${params.toString()}`;
      window.history.replaceState({}, "", newUrl);

      lockHint.textContent = "Saved ‚úÖ Now just copy the page link from your browser and send it to her.";
    });

    // Load from URL if present
    (function initFromURL(){
      const params = new URLSearchParams(window.location.search);
      const ready = params.get("ready") === "1";
      const m = params.get("m");
      const yt = params.get("yt");

      if(m) msg.value = decodeURIComponent(m);
      if(yt) ytInput.value = decodeURIComponent(yt);

      if(ready){
        // If you already saved it, still allow edits, but show song automatically
        setEmbedFromLink();
      }
    })();
  </script>
